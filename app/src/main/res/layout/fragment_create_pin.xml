<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context=".onboarding.accaunt_setup.CreatePinFragment">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:title="Create Your PIN"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/arrow_back" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Please remember this PIN, because it will be used when you want to top up, withdraw, or donate"
        android:textColor="@color/title_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar2" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="169dp"
        android:fontFamily="@font/source_sans_pro_semibold"
        android:text="Create PIN"
        android:textColor="@color/title_color"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.425"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <LinearLayout
        android:id="@+id/listPin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="132dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <View
            android:id="@+id/pin1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/checkbox_oval" />

        <View
            android:id="@+id/pin2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/checkbox_oval" />

        <View
            android:id="@+id/pin3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/checkbox_oval" />

        <View
            android:id="@+id/pin4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/checkbox_oval" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="62dp"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listPin">

        <TextView
            android:id="@+id/one"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:background="@drawable/checkbox_oval"
            android:fontFamily="@font/source_sans_pro_regular"
            android:gravity="center"
            android:tag="1"
            android:text="1"
            android:textColor="@color/theme_color"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/two"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:background="@drawable/checkbox_oval"
            android:fontFamily="@font/source_sans_pro_regular"
            android:gravity="center"
            android:tag="1"
            android:text="2"
            android:textColor="@color/theme_color"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/three"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@drawable/checkbox_oval"
            android:fontFamily="@font/source_sans_pro_regular"
            android:gravity="center"
            android:tag="3"
            android:text="3"
            android:textColor="@color/theme_color"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="62dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TextView
            android:id="@+id/four"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:background="@drawable/checkbox_oval"
            android:fontFamily="@font/source_sans_pro_regular"
            android:gravity="center"
            android:tag="4"
            android:text="4"
            android:textColor="@color/theme_color"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/five"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:background="@drawable/checkbox_oval"
            android:fontFamily="@font/source_sans_pro_regular"
            android:gravity="center"
            android:tag="5"
            android:text="5"
            android:textColor="@color/theme_color"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/six"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@drawable/checkbox_oval"
            android:fontFamily="@font/source_sans_pro_regular"
            android:gravity="center"
            android:tag="6"
            android:text="6"
            android:textColor="@color/theme_color"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="62dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <TextView
            android:id="@+id/seven"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:background="@drawable/checkbox_oval"
            android:fontFamily="@font/source_sans_pro_regular"
            android:gravity="center"
            android:tag="7"
            android:text="7"
            android:textColor="@color/theme_color"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/eight"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginEnd="20dp"
            android:layout_weight="1"
            android:background="@drawable/checkbox_oval"
            android:fontFamily="@font/source_sans_pro_regular"
            android:gravity="center"
            android:tag="8"
            android:text="8"
            android:textColor="@color/theme_color"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/nine"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@drawable/checkbox_oval"
            android:fontFamily="@font/source_sans_pro_regular"
            android:gravity="center"
            android:tag="9"
            android:text="9"
            android:textColor="@color/theme_color"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">
        <TextView
            android:id="@+id/zero"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="156dp"
            android:layout_marginTop="25dp"
            android:layout_weight="1"
            android:background="@drawable/checkbox_oval"
            android:fontFamily="@font/source_sans_pro_regular"
            android:gravity="center"
            android:tag="0"
            android:text="0"
            android:textColor="@color/theme_color"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/continue_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Continue"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:layout_marginTop="20dp"
        android:visibility="invisible"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Circle"
        android:backgroundTint="#0BB160"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>




</androidx.constraintlayout.widget.ConstraintLayout>