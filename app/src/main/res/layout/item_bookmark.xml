<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="270dp"
    android:layout_margin="15dp"
    app:cardCornerRadius="20dp"
    android:id="@+id/bookmarkCard"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/urgent_i"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/orphanage_children"
        android:scaleType="fitXY" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/delete"
        android:layout_width="40dp"
        android:layout_height="50dp"
        app:iconGravity="textTop"
        app:cornerRadius="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        app:iconPadding="-5dp"
        app:iconSize="20dp"
        app:icon="@drawable/ic_baseline_delete_outline_24" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/b_ic"
        android:layout_width="30dp"
        android:layout_height="40dp"
        app:iconGravity="textTop"
        app:cornerRadius="10dp"
        android:layout_marginStart="340dp"
        android:layout_marginTop="10dp"
        app:iconPadding="-4dp"
        app:iconSize="20dp"
        app:icon="@drawable/ic_baseline_bookmark_24" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="150dp"
        android:padding="10dp">
        <TextView
            android:id="@+id/urgent_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColor="@color/title_color"
            android:fontFamily="@font/source_sans_pro_semibold"
            android:textSize="20sp"
            android:text="Help Orphanage Children to.." />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/theme_color"
                android:text="$" />
            <TextView
                android:id="@+id/urgent_raisedFund"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/theme_color"
                android:text="2379" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" fund raised from $"
                />
            <TextView
                android:id="@+id/urgent_toRaise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4200" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@drawable/line_progress" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/urgent_donatorQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/theme_color"
                android:text="1280" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Donators" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-18dp"
            android:layout_marginStart="270dp">
            <TextView
                android:id="@+id/Urgent_leftDays"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/theme_color"
                android:text="19" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" days left" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>