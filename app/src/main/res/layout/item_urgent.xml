<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_card"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5">

<LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1.5"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/urgent_i"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/orphanage_children"
        android:scaleType="centerCrop" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/b_ic"
        android:layout_width="30dp"
        android:layout_height="40dp"
        app:iconGravity="textTop"
        app:cornerRadius="5dp"
        android:layout_marginStart="-45dp"
        android:layout_marginTop="10dp"
        app:iconSize="20dp"
        app:icon="@drawable/ic_baseline_bookmark_border_24" />
</LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.5"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:id="@+id/urgent_title"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textColor="@color/title_color"
                android:fontFamily="@font/source_sans_pro_semibold"
                android:textSize="15sp"
                android:text="Help Orphanage Children to.." />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/theme_color"
                    android:text="$" />
                <TextView
                    android:id="@+id/urgent_raisedFund"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/theme_color"
                    android:text="2379" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" fund raised from $"
                    />
                <TextView
                    android:id="@+id/urgent_toRaise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4200" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@drawable/line_progress" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/urgent_donatorQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/theme_color"
                    android:text="1280" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Donators" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-16dp"
                android:layout_marginStart="105dp">
                <TextView
                    android:id="@+id/Urgent_leftDays"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/theme_color"
                    android:text="19" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" days left" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>