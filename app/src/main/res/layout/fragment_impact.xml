<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Home.ImpactFragment" >

    <com.google.android.material.button.MaterialButton
        android:id="@+id/back"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        app:cornerRadius="10dp"
        app:icon="@drawable/arrow_back"
        app:iconTint="@color/theme_color"
        app:elevation="0dp"
        app:iconPadding="-2dp"
        app:iconGravity="textEnd"
        android:backgroundTint="#63222624"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

<ImageView
    android:id="@+id/impactI"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:src="@drawable/siamese_twins"
    android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/impactT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="100dp"
        android:text="Siamese Twins Surgery Was Successful"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/impactI"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/video"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/impactT" />

</androidx.constraintlayout.widget.ConstraintLayout>